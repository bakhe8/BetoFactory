{
    "name": "beto-factory",
    "version": "2.1.0",
    "description": "Beto Factory â€” Core Edition (Salla-only)",
    "type": "module",
    "private": true,
    "scripts": {
        "canonicalize": "node core/input.js",
        "adapt:salla": "node core/adapter-salla.js",
        "adapt:platform": "npm run adapt:salla",
        "assets": "node core/assets.js",
        "locales": "node core/locales.js",
        "clean": "node core/cleaner.js",
        "export": "node core/export.js",
