        "factory:build": "node src/cli/factory-build.cjs",
        "salla:serve:ns": "node tools/salla-ns.cjs watch",
        "salla:validate:ns": "node tools/salla-ns.cjs validate",
        "salla:publish:ns": "node tools/salla-ns.cjs publish",
        "status": "node scripts/status/status-folder.cjs && npx doctoc docs/factory-progress.md",
        "adapt:cli": "node src/cli/adapter-cli.cjs",
        "dashboard:dev": "vite dashboard",
        "server": "node server/index.cjs"
