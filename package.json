{
  "name": "beto-factory",
  "version": "0.1.0",
  "description": "Beto Factory — Core Edition (Salla-only)",
  "type": "module",
  "private": true,
  "scripts": {
    "canonicalize": "node core/input.js",
    "adapt:salla": "node core/adapter-salla.js",
    "assets": "node core/assets.js",
    "locales": "node core/locales.js",
    "clean": "node core/cleaner.js",
    "export": "node core/export.js",
    "salla:validate": "node core/salla-cli.js theme validate",
    "salla:lint": "node core/salla-cli.js theme lint",
    "salla:pre-push": "node core/salla-cli.js theme pre-push",
    "salla:push": "node core/salla-cli.js theme push",
    "salla:publish": "node core/salla-cli.js theme publish",
    "dev": "node core/salla-cli.js theme watch",
    "watch": "node core/watch.js",
    "build": "npm run canonicalize && npm run adapt:salla && npm run assets && npm run locales && npm run salla:validate && npm run salla:lint && npm run clean && npm run export",
    "test:canonical": "node tests/test-canonical.js",
    "test:adapter": "node tests/test-adapter.js",
    "test:export": "node tests/test-export.js",
    "test:salla-cli": "npm run salla:validate && npm run salla:lint",
    "test:twilight": "node tests/test-twilight.js",
    "test": "npm run test:canonical && npm run test:adapter && npm run test:twilight && node tests/test-section-schema.js && npm run test:export",
    "lint": "eslint .",
    "format": "prettier -w .",
    "preview": "node preview/server.js",
    "validate:salla": "node core/validate-salla.js",
    "parse": "node tools/parser.cjs",
    "watch": "node tools/folderWatcher.cjs",
    "validate": "node tools/schemaValidator.cjs",
    "dev": "npm run watch",
    "process-all": "npm run parse && npm run validate"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "archiver": "^7.0.1",
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.5"
  },
  "devDependencies": {
    "@salla.sa/cli": "^3.2.25",
    "chokidar": "^4.0.3",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2"
  }
}


