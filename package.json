        "smart-watch": "node tools/smart-watcher.cjs",
        "smart-init": "node tools/smart-init.js",
        "smart": "node src/cli/minimal-cli.cjs",
        "smart-batch": "node src/cli/smart-cli.cjs batch-parse",
        "smart-clean": "node tools/cleanup.cjs",
        "smart-all": "npm run smart-batch && npm run smart-clean",
        "test:fast": "jest -c jest.config.cjs",
