{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://beto.factory/schema/section.schema.json",
  "title": "Twilight Section Schema Block",
  "type": "object",
  "required": ["name", "settings"],
  "properties": {
    "name": { "type": "string" },
    "settings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "id"],
        "properties": {
          "type": { "type": "string", "enum": ["text", "image", "image_picker", "boolean", "color", "range", "items", "static"] },
          "id": { "type": "string" },
          "label": { "type": ["string", "null"] },
          "value": {},
          "min": { "type": ["number", "null"] },
          "max": { "type": ["number", "null"] },
          "step": { "type": ["number", "null"] }
        },
        "additionalProperties": true
      }
    },
    "blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "name"],
        "properties": {
          "type": { "type": "string" },
          "name": { "type": "string" },
          "settings": { "$ref": "#/properties/settings" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}

