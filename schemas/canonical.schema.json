{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://beto.factory/schema/canonical.json",
  "title": "Beto Factory Canonical Model",
  "type": "object",
  "required": ["layout", "components", "assets"],
  "properties": {
    "$schema": {"type": "string"},
    "layout": {
      "type": "object",
      "required": ["header", "footer"],
      "properties": {
        "header": {"type": "string"},
        "footer": {"type": "string"}
      },
      "additionalProperties": true
    },
    "components": {
      "type": "object",
      "properties": {
        "hero": {
          "type": "object",
          "required": ["type", "props"],
          "properties": {
            "type": {"const": "banner"},
            "props": {
              "type": "object",
              "properties": {
                "title": {"type": "string"},
                "image": {"type": ["string", "null"]}
              },
              "additionalProperties": true
            }
          },
          "additionalProperties": true
        },
        "product-grid": {
          "type": "object",
          "properties": {
            "type": {"const": "grid"}
          },
          "required": ["type"],
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "assets": {
      "type": "object",
      "properties": {
        "images": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}

